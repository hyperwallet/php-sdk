{
  "name": "hyperwallet/sdk",
  "description": "A library to manage users, transfer methods and payments through the Hyperwallet API",
  "type": "library",
  "keywords": [
    "hyperwallet",
    "sdk",
    "rest",
    "bankaccount",
    "payout",
    "creditcard",
    "ach"
  ],
  "homepage": "http://hyperwallet.github.io/php-sdk",
  "license": "MIT",
  "authors": [
    {
      "name": "Florian Krauthan",
      "email": "fkrauthan@hyperwallet.com"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "guzzlehttp/guzzle": "^6.2"
  },
  "autoload": {
    "psr-4": { "Hyperwallet\\": "src/Hyperwallet" }
  },
  "autoload-dev" : {
    "psr-4": { "Hyperwallet\\Tests\\" : "tests/Hyperwallet/Tests" }
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "phake/phake": "^2.3",
    "satooshi/php-coveralls": "^1.0"
  }
}
